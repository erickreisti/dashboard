generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int
  category    String?  // Adicione esta linha
  sku         String?  // Adicione esta linha
  imageUrl    String?
  isActive    Boolean  @default(true) // Adicione esta linha
  featured    Boolean  @default(false) // Adicione esta linha
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  items       OrderItem[]
}

model Order {
  id               String   @id @default(cuid())
  customer         String
  email            String
  status           String   @default("pending")
  total            Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  items            OrderItem[]
  shippingAddress  Json?    // Adicione esta linha
  trackingNumber   String?  // Adicione esta linha
  paymentMethod    String?  // Adicione esta linha
  notes            String?  // Adicione esta linha
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}